<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_primary">

    <!-- Content -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/color_primary"
        app:layout_constraintBottom_toTopOf="@id/player"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Header -->
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_primary"
            android:elevation="0dp"
            app:elevation="0dp">

            <com.google.android.material.appbar.MaterialToolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:title="Документы" />

            <!-- Основной контент профиля - будет скрываться -->
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsingToolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_primary"
                android:elevation="0dp"
                android:visibility="gone"
                app:contentScrim="@color/color_primary"
                app:elevation="0dp"
                app:expandedTitleGravity="top|start"
                app:expandedTitleTextColor="@android:color/transparent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
                app:scrimAnimationDuration="600"
                app:statusBarScrim="@android:color/transparent">

                <!-- Content -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="0dp"
                    android:layout_marginTop="0dp"
                    android:background="@color/color_primary"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"
                    app:layout_collapseMode="parallax">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_primary">

                        <!-- Cover -->
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/cover"
                            android:layout_width="0dp"
                            android:layout_height="150dp"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:layout_marginTop="1dp"
                            android:scaleType="centerCrop"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <!-- Cover foreground -->
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/coverForeground"
                            android:layout_width="0dp"
                            android:layout_height="24dp"
                            app:layout_constraintBottom_toBottomOf="@id/cover"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                        <!-- Большая аватарка (круглая) -->
                        <RelativeLayout
                            android:id="@+id/avatar"
                            android:layout_width="92dp"
                            android:layout_height="92dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            app:layout_constraintBottom_toTopOf="@id/coverForeground"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@id/coverForeground">

                            <RelativeLayout
                                android:layout_width="96dp"
                                android:layout_height="96dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:padding="3dp">

                                <com.google.android.material.imageview.ShapeableImageView
                                    android:id="@+id/user_avatars"
                                    android:layout_width="90dp"
                                    android:layout_height="90dp"
                                    android:layout_gravity="center"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/accoun_oval"
                                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.CornerSize50Percent" />

                            </RelativeLayout>
                        </RelativeLayout>

                        <!-- Имя пользователя и количество документов -->
                        <LinearLayout
                            android:id="@+id/linear"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="20dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/avatar">

                            <TextView
                                android:id="@+id/user_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="Мои документы"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                tools:text="Мои документы" />

                            <TextView
                                android:id="@+id/documents_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:gravity="center"
                                android:text="0 документов"
                                android:textColor="@color/gray_600"
                                android:textSize="14sp"
                                tools:text="15 документов" />

                        </LinearLayout>

                        <!-- Статус (общий размер) -->
                        <LinearLayout
                            android:id="@+id/players_artist"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="25dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingBottom="5dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/linear"
                            app:layout_constraintVertical_bias="0.04"
                            tools:ignore="UseCompoundDrawables">

                            <TextView
                                android:id="@+id/user_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:alpha="0.7"
                                android:text="Общий размер: 0 MB"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                tools:text="Общий размер: 45.2 MB" />

                        </LinearLayout>

                        <!-- Статистика документов -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="46dp"
                            android:background="@color/color_primary"
                            android:orientation="vertical"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:paddingTop="0dp"
                            android:paddingBottom="0dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/players_artist"
                            app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed">

                            <GridLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:columnCount="4"
                                android:rowCount="1">

                                <!-- PDF документы -->
                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/pdf_sum"
                                    style="@style/Widget.Material3.Button.TextButton"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_row="0"
                                    android:layout_column="0"
                                    android:layout_rowWeight="1"
                                    android:layout_columnWeight="1"
                                    android:layout_marginStart="4dp"
                                    android:layout_marginEnd="4dp"
                                    android:layout_marginBottom="8dp"
                                    android:gravity="center"
                                    android:lines="2"
                                    android:maxLines="2"
                                    android:singleLine="false"
                                    android:stateListAnimator="@null"
                                    android:text="PDF\n0"
                                    android:textColor="#000000"
                                    android:textSize="11sp"
                                    app:cornerRadius="8dp"
                                    app:icon="@drawable/ic_pdf"
                                    app:iconGravity="textTop"
                                    app:iconPadding="4dp"
                                    app:iconSize="18dp"
                                    app:iconTint="#000000" />

                                <!-- Word документы -->
                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/word_sum"
                                    style="@style/Widget.Material3.Button.TextButton"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_row="0"
                                    android:layout_column="1"
                                    android:layout_rowWeight="1"
                                    android:layout_columnWeight="1"
                                    android:layout_marginStart="4dp"
                                    android:layout_marginEnd="4dp"
                                    android:layout_marginBottom="8dp"
                                    android:gravity="center"
                                    android:lines="2"
                                    android:maxLines="2"
                                    android:singleLine="false"
                                    android:stateListAnimator="@null"
                                    android:text="Word\n0"
                                    android:textColor="#000000"
                                    android:textSize="11sp"
                                    app:cornerRadius="8dp"
                                    app:icon="@drawable/ic_word"
                                    app:iconGravity="textTop"
                                    app:iconPadding="4dp"
                                    app:iconSize="18dp"
                                    app:iconTint="#000000" />

                                <!-- Excel документы -->
                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/excel_sum"
                                    style="@style/Widget.Material3.Button.TextButton"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_row="0"
                                    android:layout_column="2"
                                    android:layout_rowWeight="1"
                                    android:layout_columnWeight="1"
                                    android:layout_marginStart="4dp"
                                    android:layout_marginEnd="4dp"
                                    android:layout_marginBottom="8dp"
                                    android:gravity="center"
                                    android:lines="2"
                                    android:maxLines="2"
                                    android:singleLine="false"
                                    android:stateListAnimator="@null"
                                    android:text="Excel\n0"
                                    android:textColor="#000000"
                                    android:textSize="11sp"
                                    app:cornerRadius="8dp"
                                    app:icon="@drawable/ic_excel"
                                    app:iconGravity="textTop"
                                    app:iconPadding="4dp"
                                    app:iconSize="18dp"
                                    app:iconTint="#000000" />

                                <!-- Архивы -->
                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/archive_sum"
                                    style="@style/Widget.Material3.Button.TextButton"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_row="0"
                                    android:layout_column="3"
                                    android:layout_rowWeight="1"
                                    android:layout_columnWeight="1"
                                    android:layout_marginStart="4dp"
                                    android:layout_marginEnd="4dp"
                                    android:layout_marginBottom="8dp"
                                    android:gravity="center"
                                    android:lines="2"
                                    android:maxLines="2"
                                    android:singleLine="false"
                                    android:stateListAnimator="@null"
                                    android:text="Архивы\n0"
                                    android:textColor="#000000"
                                    android:textSize="11sp"
                                    app:cornerRadius="8dp"
                                    app:icon="@drawable/ic_archive"
                                    app:iconGravity="textTop"
                                    app:iconPadding="4dp"
                                    app:iconSize="18dp"
                                    app:iconTint="#000000" />

                            </GridLayout>
                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <!-- Toolbar -->
                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin"
                    app:menu="@menu/menu_documents"
                    app:navigationIcon="@drawable/arrow_left_black"
                    app:title="Документы" />

                <!-- Аватар в toolbar -->
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/toolbar_avatar"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="16dp"
                    android:alpha="0"
                    android:scaleType="centerCrop"
                    android:visibility="invisible"
                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.CornerSize50Percent" />

            </com.google.android.material.appbar.CollapsingToolbarLayout>

            <!-- Кнопки действий с документами -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_primary"
                android:orientation="vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="10dp"
                android:paddingBottom="8dp"
                android:visibility="gone"
                app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed">

                <GridLayout
                    android:id="@+id/actionsGridLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="4">

                    <!-- Кнопка скачать все -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/download_button"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginBottom="8dp"
                        android:backgroundTint="#F5F5F5"
                        android:stateListAnimator="@null"
                        android:text="Скачать все"
                        android:textColor="#000000"
                        android:textSize="11sp"
                        app:cornerRadius="8dp"
                        app:icon="@drawable/save"
                        app:iconGravity="textTop"
                        app:iconPadding="8dp"
                        app:iconSize="20dp"
                        app:iconTint="#000000" />

                    <!-- Кнопка поделиться -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/share_button"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginBottom="8dp"
                        android:backgroundTint="#F5F5F5"
                        android:stateListAnimator="@null"
                        android:text="Поделиться"
                        android:textColor="#000000"
                        android:textSize="11sp"
                        app:cornerRadius="8dp"
                        app:icon="@drawable/share_outline"
                        app:iconGravity="textTop"
                        app:iconPadding="8dp"
                        app:iconSize="18dp"
                        app:iconTint="#000000" />

                    <!-- Кнопка сортировки -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/sort_button"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginBottom="8dp"
                        android:backgroundTint="#F5F5F5"
                        android:stateListAnimator="@null"
                        android:text="Сортировка"
                        android:textColor="#000000"
                        android:textSize="11sp"
                        app:cornerRadius="8dp"
                        app:icon="@drawable/sort_variant"
                        app:iconGravity="textTop"
                        app:iconPadding="8dp"
                        app:iconSize="18dp"
                        app:iconTint="#000000" />

                    <!-- Кнопка меню -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/menu_button"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginBottom="8dp"
                        android:backgroundTint="#F5F5F5"
                        android:stateListAnimator="@null"
                        android:text="Еще"
                        android:textColor="#000000"
                        android:textSize="11sp"
                        app:cornerRadius="8dp"
                        app:icon="@drawable/dots_horizontal"
                        app:iconGravity="textTop"
                        app:iconPadding="8dp"
                        app:iconSize="18dp"
                        app:iconTint="#000000" />

                </GridLayout>
            </LinearLayout>

            <!-- TabLayout для фильтрации -->
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_primary"
                android:layout_marginTop="0dp"
                android:paddingLeft="0dp"
                android:paddingRight="2dp"
                android:textDirection="locale"
                android:visibility="gone"
                app:contentScrim="@color/color_primary"
                app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
                app:tabBackground="@color/color_primary"
                app:tabIndicator="@drawable/selected_chip_background"
                app:tabIndicatorColor="#FAFAFA"
                app:tabIndicatorFullWidth="true"
                app:tabIndicatorGravity="stretch"
                app:tabGravity="fill"
                app:tabIndicatorHeight="2dp"
                app:tabMode="scrollable"
                app:tabSelectedTextColor="#2196F3"
                app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
                app:tabTextColor="#757575">

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ВСЕ" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PDF" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WORD" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EXCEL" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="АРХИВЫ" />

            </com.google.android.material.tabs.TabLayout>

            <!-- Разделитель -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.6"
                android:background="@color/light_gray"
                app:layout_scrollFlags="scroll|enterAlways" />

        </com.google.android.material.appbar.AppBarLayout>

        <!-- Список документов -->
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_primary"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewDocuments"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingTop="8dp"
                tools:listitem="@layout/item_document" />

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <!-- Контейнер для дополнительного контента -->
        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Прогресс бар -->
        <FrameLayout
            android:id="@+id/progressBarContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_primary"
            android:elevation="6dp"
            android:visibility="gone">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminate="true" />

        </FrameLayout>

        <!-- Текст при пустом списке -->
        <TextView
            android:id="@+id/emptyStateText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_primary"
            android:gravity="center"
            android:text="Документы не найдены"
            android:textColor="@color/gray_600"
            android:textSize="16sp"
            android:visibility="gone" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!-- Bottom player (можно скрыть для документов) -->
    <LinearLayout
        android:id="@+id/player"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>