<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Иконка документа -->
        <androidx.cardview.widget.CardView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="6dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/document_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_document"
                android:contentDescription="@string/document_icon" />

        </androidx.cardview.widget.CardView>

        <!-- Информация о документе -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Название документа -->
            <TextView
                android:id="@+id/document_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/document_title_placeholder"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Название документа.pdf" />

            <!-- Тип документа -->
            <TextView
                android:id="@+id/document_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/document_type_placeholder"
                android:textColor="@color/gray_600"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="PDF документ" />

            <!-- Размер и дата -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/document_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/document_size_placeholder"
                    android:textColor="@color/gray_500"
                    android:textSize="12sp"
                    tools:text="2.4 MB" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="•"
                    android:textColor="@color/gray_500"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/document_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/document_date_placeholder"
                    android:textColor="@color/gray_500"
                    android:textSize="12sp"
                    tools:text="01.01.2023" />

            </LinearLayout>

        </LinearLayout>

        <!-- Кнопки действий -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <ProgressBar
                android:id="@+id/download_progress"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="8dp"
                android:visibility="gone"
                android:indeterminate="true"
                android:indeterminateTint="@color/color_tabs" />

            <!-- Кнопка скачивания -->
            <ImageButton
                android:id="@+id/download_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/chevron_right"
                android:contentDescription="@string/download_document"
                android:layout_margin="0dp"
                tools:ignore="ContentDescription" />

            <!-- Кнопка поделиться -->
            <ImageButton
                android:id="@+id/share_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/share_black"
                android:visibility="gone"
                android:contentDescription="@string/share_document"
                android:layout_margin="4dp"
                tools:ignore="ContentDescription" />

        </LinearLayout>

    </LinearLayout>

    <!-- Разделитель -->


</LinearLayout>