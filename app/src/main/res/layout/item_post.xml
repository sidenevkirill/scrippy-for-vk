<!-- res/layout/item_post.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/chip_background"
    android:layout_marginTop="2dp"
    android:padding="8dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/audio_item"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:paddingRight="0dp"
        android:paddingLeft="0dp"
        android:background="?android:selectableItemBackground"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="4dp">

        <FrameLayout
            android:id="@+id/item_audio_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/author_avatar"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/img"
                app:shapeAppearanceOverlay="@style/CustomShapeImagePost"/>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/audio.titles.container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/author_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:textSize="14sp"
                    android:text="Railcinec"
                    android:textColor="?android:textColorPrimary" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="2dp" />

            <TextView
                android:id="@+id/post_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="15 мин назад"
                android:textSize="14sp"
                android:textColor="?android:textColorSecondary" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:layout_alignParentStart="true">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/dots_vertical"
                app:shapeAppearanceOverlay="@style/CustomShapeImagePlaylist"/>
        </FrameLayout>

    </LinearLayout>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageCover"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="6dp"
        android:scaleType="centerCrop"
        android:background="@drawable/ic_playlist"
        app:shapeAppearanceOverlay="@style/CustomShapeImagePlaylist"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/attachments_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>

    <TextView
        android:id="@+id/post_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="6dp"
        android:text="directed by Roman Ryabokonev"
        android:textSize="16sp"
        android:textColor="?android:textColorPrimary" />

    <TextView
        android:id="@+id/audioAttachments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="6dp"
        android:visibility="gone"
        android:text="Год альбому «Другой»"
        android:textSize="14sp"
        android:textColor="?android:textColorHighlight" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:padding="0dp">

        <Button
            android:id="@+id/like_count"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:text="0"
            android:backgroundTint="#98ADDDFF"
            android:drawableLeft="@drawable/heart_outline"/>

        <Button
            android:id="@+id/comment_count"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:backgroundTint="#98ADDDFF"
            android:text="0"
            android:drawableLeft="@drawable/comment_outline"/>

        <Button
            android:id="@+id/share_count"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#98ADDDFF"
            android:text="0"
            android:drawableLeft="@drawable/share_outline"/>

    </LinearLayout>

</LinearLayout>