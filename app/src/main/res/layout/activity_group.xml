<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Content -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#ffffff"
        app:layout_constraintBottom_toTopOf="@id/player"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <!-- Header -->
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            android:background="#ffffff"
            app:elevation="0dp">
            <com.google.android.material.appbar.CollapsingToolbarLayout
                app:expandedTitleGravity="top|start"
                android:id="@+id/collapsingToolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentScrim="#ffffff"
                app:scrimAnimationDuration="600"
                android:elevation="0dp"
                app:elevation="0dp"
                app:expandedTitleTextColor="@android:color/transparent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
                app:statusBarScrim="@android:color/transparent">
                <!-- Content -->
                <androidx.cardview.widget.CardView
                    app:cardBackgroundColor="@android:color/transparent"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="0dp"
                    android:layout_marginTop="5dp"
                    android:paddingBottom="20dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"
                    android:id="@+id/header">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:paddingBottom="20dp">
                        <!-- Cover -->
                        <androidx.appcompat.widget.AppCompatImageView
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:id="@+id/cover"
                            android:layout_height="150dp"
                            android:layout_width="match_parent" />

                        <View
                            android:id="@+id/generatedColorView"
                            android:layout_height="150dp"
                            android:layout_width="match_parent"
                            android:background="#E4E4E4" />
                        <!-- Cover foreground -->
                        <androidx.appcompat.widget.AppCompatImageView
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="@id/cover"
                            android:src="@drawable/cover_foreground_primary"
                            android:layout_height="24dp"
                            android:layout_width="0dp"
                            android:id="@+id/coverForeground"/>


                        <FrameLayout
                            android:id="@+id/avatar"
                            android:layout_width="92dp"
                            android:layout_height="92dp"
                            app:layout_constraintHorizontal_bias="0.05"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/coverForeground"
                            app:layout_constraintBottom_toTopOf="@id/coverForeground">

                            <RelativeLayout
                                android:layout_width="92dp"
                                android:layout_height="92dp"
                                android:layout_gravity="end"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <com.google.android.material.imageview.ShapeableImageView
                                    android:id="@+id/avatarr"
                                    android:layout_width="92dp"
                                    android:layout_height="92dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/accoun_oval" />

                                <ImageView
                                    android:id="@+id/user"
                                    android:layout_width="15dp"
                                    android:layout_height="wrap_content"
                                    android:layout_alignStart="@id/avatarr"
                                    android:layout_alignEnd="@+id/avatarr"
                                    android:layout_alignTop="@+id/avatarr"
                                    android:layout_alignBottom="@+id/avatarr"
                                    android:gravity="center"
                                    android:text="{}"
                                    android:textStyle="bold"
                                    android:textSize="20sp"/>
                            </RelativeLayout>


                        </FrameLayout>
                        <!-- Name -->
                        <androidx.appcompat.widget.AppCompatTextView
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/avatar"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:layout_marginTop="14dp"
                            android:layout_marginHorizontal="16dp"
                            android:gravity="start"
                            android:text="Сиденев Кирилл"
                            android:textSize="16sp"
                            android:id="@+id/textName"/>
                        <!-- Counter -->
                        <LinearLayout
                            android:orientation="horizontal"
                            tools:ignore="UseCompoundDrawables"
                            app:layout_constraintTop_toBottomOf="@id/textName"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginHorizontal="15dp"
                            android:id="@+id/players_artist"
                            android:gravity="left"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent">

                            <TextView
                                android:id="@+id/textId"
                                android:alpha="0.7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_marginLeft="2dp"
                                android:textSize="12sp"
                                android:text="id43244432"
                                android:textAppearance="?android:textAppearanceSmall"
                                />


                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <!-- Toolbar -->
                <com.google.android.material.appbar.MaterialToolbar
                    android:layout_height="?attr/actionBarSize"
                    android:layout_width="match_parent"
                    app:layout_collapseMode="pin"
                    app:title="Профиль"
                    android:id="@+id/toolbar"/>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Retry button -->
            <Button
                android:id="@+id/friend"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Перейти" />

        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!-- Bottom player -->
    <LinearLayout
        android:id="@+id/player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>