<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NavActivityOne">

    <!-- Основной контейнер для фрагментов -->
    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation_container"/>

    <!-- Контейнер для мини-плеера и навигации -->
    <LinearLayout
        android:id="@+id/bottom_navigation_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <!-- Разделительная линия -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="0.2"
            android:background="@color/dark_background" />

        <!-- Мини-плеер -->
        <LinearLayout
            android:id="@+id/mini_player_container"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="?android:selectableItemBackground"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="12dp"
            android:paddingEnd="8dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/audio.album"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:src="@drawable/circle_audio" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/currentTrackText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="16sp"
                    android:textColor="?android:textColorPrimary" />

                <TextView
                    android:id="@+id/currentTrackTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="14sp"
                    android:textColor="?android:textColorSecondary" />
            </LinearLayout>

            <ImageView
                android:id="@+id/playPauseButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/play" />

            <ImageButton
                android:id="@+id/miniPlayerNext"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_vector_baseline_skip_next"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/miniPlayerprevious"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_vector_round_skip_previous"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Нижняя навигация -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/navigition" />
    </LinearLayout>
</RelativeLayout>