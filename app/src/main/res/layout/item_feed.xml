<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/chip_background"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Author info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/author_avatar"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginLeft="4dp"
                android:src="@drawable/img"
                app:shapeAppearanceOverlay="@style/CustomShapeImageAvatarFeed"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:id="@+id/author_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/post_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:visibility="gone"
                    android:textSize="12sp"/>
            </LinearLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:layout_marginTop="6dp"
                android:layout_alignParentStart="true">

                <ImageView
                    android:id="@+id/menu_button"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/dots_horizontal"
                    app:shapeAppearanceOverlay="@style/CustomShapeImagePlaylist"/>
            </FrameLayout>
        </LinearLayout>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/post_image"
            android:layout_width="match_parent"
            android:layout_height="342dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:scaleType="centerCrop"
            android:background="@drawable/ic_playlist"
            app:shapeAppearanceOverlay="@style/CustomShapeImagePlaylist"
            android:visibility="gone" />

        <!-- Post text -->
        <TextView
            android:id="@+id/post_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="6dp"
            android:layout_marginBottom="8dp"
            android:text="dfdsfdsfdfdfdsfdsf"
            android:visibility="gone"/>

        <Button
            android:id="@+id/expand_collapse_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/post_text"
            android:layout_marginTop="4dp"
            android:paddingLeft="4dp"
            android:text="Показать полностью"
            android:textColor="@android:color/holo_blue_light"
            android:background="@android:color/transparent"
            android:visibility="gone"/>

        <!-- Audio attachment -->
        <LinearLayout
            android:id="@+id/audio_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="4dp"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="4dp"
            android:background="?attr/selectableItemBackground"
            android:visibility="gone">

            <ImageButton
                android:id="@+id/play_pause_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:id="@+id/audio_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:ellipsize="end"
                    android:maxLines="1"/>

                <TextView
                    android:id="@+id/audio_artist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/audio_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="6dp"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Плейлист вложение -->
        <LinearLayout
            android:id="@+id/playlist_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_playlist_attachment"
            android:visibility="gone">

            <ImageView
                android:id="@+id/playlist_cover"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/playlist_placeholder"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:id="@+id/playlist_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/playlist_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            android:visibility="gone"
            android:gravity="center"
            android:padding="0dp">

            <Button
                android:id="@+id/like_count"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:text="0"
                android:textColor="@color/black"
                android:backgroundTint="@color/white"
                android:drawableLeft="@drawable/heart_outline"/>

            <Button
                android:id="@+id/comment_count"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:textColor="@color/black"
                android:backgroundTint="@color/white"
                android:text="1"
                android:drawableLeft="@drawable/comment_outline"/>

            <Button
                android:id="@+id/share_count"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:backgroundTint="@color/white"
                android:text="0"
                android:drawableLeft="@drawable/share_outline"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>