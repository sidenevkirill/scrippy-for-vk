<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="0dp"
    android:background="#F5F5F5">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="Играть ссылку"
        android:background="@color/color_primary"
        app:titleTextColor="@color/color_tabs" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Вставьте ссылку на аудио"
        android:layout_marginTop="12dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:gravity="center" />

    <EditText
        android:id="@+id/et_audio_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="https://example.com/audio.mp3"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:inputType="textUri"
        android:maxLines="3"
        android:padding="12dp"
        android:background="@drawable/edittext_background"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/btn_play"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Воспроизвести"
            android:enabled="false"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btn_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Очистить" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_example"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="Вставить пример ссылки"
        android:layout_marginTop="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="Поддерживаемые форматы: MP3, AAC, WAV, OGG, FLAC, M4A, M3U8 (потоки)"
        android:textSize="12sp"
        android:textColor="#666"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:padding="8dp" />

</LinearLayout>