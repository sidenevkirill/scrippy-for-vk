<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@drawable/attachment_background"
    android:orientation="horizontal"
    android:padding="12dp">

    <ImageView
        android:id="@+id/attachment_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/circle_video_ic" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/attachment_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_marginTop="6dp"
            android:maxLines="1"
            android:text="Видео"
            android:textColor="@color/attachment_text_color"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/audioArtist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:visibility="gone"
            android:text="Artist Name"
            android:textColor="@color/attachment_secondary_text"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/attachment_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="3:45"
            android:visibility="gone"
            android:textColor="@color/attachment_secondary_text"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>