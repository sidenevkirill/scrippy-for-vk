<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center">

    <!-- Иконка -->
    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/lock_outline"
        android:layout_marginBottom="16dp"
        app:tint="@color/gray" />

    <!-- Заголовок -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Создайте PIN-код"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:gravity="center" />

    <!-- Подзаголовок -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Введите 4 цифры для защиты приложения"
        android:textSize="14sp"
        android:textColor="@color/gray"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Контейнер для PIN-полей -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="32dp">

        <EditText
            android:id="@+id/pin_1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/pin_field_background"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:textStyle="bold"
            android:cursorVisible="false"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_margin="6dp" />

        <EditText
            android:id="@+id/pin_2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/pin_field_background"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:textStyle="bold"
            android:cursorVisible="false"
            android:layout_margin="6dp" />

        <EditText
            android:id="@+id/pin_3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/pin_field_background"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:textStyle="bold"
            android:cursorVisible="false"
            android:layout_margin="6dp" />

        <EditText
            android:id="@+id/pin_4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/pin_field_background"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:textStyle="bold"
            android:cursorVisible="false"
            android:layout_margin="6dp" />

    </LinearLayout>

    <!-- Подсказка -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Запомните PIN-код. Он потребуется для входа в приложение."
        android:textSize="12sp"
        android:textColor="@color/gray"
        android:gravity="center"
        android:lineSpacingExtra="4dp" />

</LinearLayout>