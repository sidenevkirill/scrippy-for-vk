<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Content -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/player"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <!-- Header -->
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="Друзья"
            android:elevation="0dp"
            app:elevation="0dp">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:minHeight="?attr/actionBarSize"
                app:title="Мой аккаунт"
                app:titleTextColor="@color/white"
                android:theme="?attr/actionBarTheme" />
            <LinearLayout
                android:id="@+id/collapsingToolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentScrim="#ffffff"
                app:scrimAnimationDuration="600"
                app:expandedTitleGravity="top|start"
                app:title="Друзья"
                android:elevation="0dp"
                app:elevation="0dp"
                app:expandedTitleTextColor="@android:color/transparent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
                app:statusBarScrim="@android:color/transparent">
                <!-- Content -->
                <androidx.cardview.widget.CardView
                    app:cardBackgroundColor="@android:color/transparent"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="0dp"
                    android:layout_marginTop="0dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"
                    android:id="@+id/header">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">
                        <!-- Cover -->
                        <androidx.appcompat.widget.AppCompatImageView
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:layout_marginTop="1dp"
                            android:id="@+id/cover"
                            android:layout_height="110dp"
                            android:layout_width="match_parent" />
                        <!-- Cover foreground -->
                        <androidx.appcompat.widget.AppCompatImageView
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="@id/cover"
                            android:layout_height="24dp"
                            android:layout_width="0dp"
                            android:id="@+id/coverForeground"/>
                        <!-- Avatar -->

                        <RelativeLayout
                            android:layout_width="92dp"
                            android:layout_height="92dp"
                            android:layout_gravity="end"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/coverForeground"
                            app:layout_constraintBottom_toTopOf="@id/coverForeground"
                            android:id="@+id/avatar"
                            android:gravity="center"
                            android:orientation="horizontal">


                            <RelativeLayout
                                android:layout_width="96dp"
                                android:layout_height="96dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:background="@drawable/oval_placeholder"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/image_name"
                                    android:layout_width="90dp"
                                    android:layout_height="90dp"
                                    android:gravity="center"
                                    android:textSize="26dp"
                                    android:layout_gravity="center" />
                            </RelativeLayout>
                        </RelativeLayout>
                        <!-- Name -->
                        <androidx.appcompat.widget.AppCompatTextView
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/avatar"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:layout_marginTop="20dp"
                            android:layout_marginHorizontal="10dp"
                            android:gravity="center"
                            android:text=""
                            android:textSize="20sp"
                            android:id="@+id/playlistNameText"/>
                        <!-- Status -->

                        <LinearLayout
                            android:orientation="horizontal"
                            tools:ignore="UseCompoundDrawables"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/playlistNameText"
                            android:layout_marginHorizontal="25dp"
                            android:paddingBottom="5dp"
                            android:id="@+id/players_artist"
                            android:gravity="center"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent">

                            <TextView
                                android:id="@+id/artistsNamesText"
                                android:alpha="0.7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:layout_marginTop="4dp"
                                android:layout_marginLeft="2dp"
                                android:textAppearance="?android:textAppearanceSmall" />

                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <Button
            android:id="@+id/buttonNfc"
            android:alpha="0.7"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/playlistNameText"
            android:layout_marginHorizontal="25dp"
            android:paddingBottom="5dp"
            android:gravity="center"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Выйти из аккаунта"
            android:layout_marginTop="430dp"
            android:layout_marginLeft="2dp"
            android:textAppearance="?android:textAppearanceSmall" />

        <Button
            android:id="@+id/buttonqrCode"
            android:alpha="0.7"
            android:orientation="horizontal"
            android:textColor="@color/white"
            tools:ignore="UseCompoundDrawables"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/playlistNameText"
            android:layout_marginHorizontal="25dp"
            android:paddingBottom="5dp"
            android:gravity="center"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="QR-Код профиля"
            android:layout_marginTop="330dp"
            android:layout_marginLeft="2dp"
            android:textAppearance="?android:textAppearanceSmall" />

        <Button
            android:id="@+id/copyToken"
            android:alpha="0.7"
            android:orientation="horizontal"
            android:textColor="@color/white"
            tools:ignore="UseCompoundDrawables"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="25dp"
            android:paddingBottom="5dp"
            android:gravity="center"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Скопировать токен"
            android:layout_marginTop="280dp"
            android:layout_marginLeft="2dp"
            android:textAppearance="?android:textAppearanceSmall" />

        <Button
            android:id="@+id/scanqr"
            android:alpha="0.7"
            android:orientation="horizontal"
            android:textColor="@color/white"
            tools:ignore="UseCompoundDrawables"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="25dp"
            android:paddingBottom="5dp"
            android:gravity="center"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Сканировать QR-Код"
            android:layout_marginTop="380dp"
            android:layout_marginLeft="2dp"
            android:textAppearance="?android:textAppearanceSmall" />

        <ImageView
            android:id="@+id/qrCodeImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:layout_gravity="center" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!-- Bottom player -->
    <LinearLayout
        android:id="@+id/player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>