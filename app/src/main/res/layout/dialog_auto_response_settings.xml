<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="URL JSON файла:"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etJsonUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="https://example.com/auto_responses.json"
        android:inputType="textUri"
        android:background="@drawable/edittext_background"
        android:padding="12dp" />

    <TextView
        android:id="@+id/tvLastUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Последнее обновление: неизвестно"
        android:textSize="12sp"
        android:textColor="@color/gray"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/tvJsonVersion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Версия JSON: 0"
        android:textSize="12sp"
        android:textColor="@color/gray"
        android:layout_marginTop="4dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="При изменении URL нажмите 'Проверить обновления'"
        android:textSize="11sp"
        android:textColor="@color/gray"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:background="@color/light_gray" />

</LinearLayout>