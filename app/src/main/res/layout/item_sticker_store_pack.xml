<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="?attr/selectableItemBackground">

        <!-- Preview Image Container -->
        <FrameLayout
            android:id="@+id/imageContainer"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            >

            <ImageView
                android:id="@+id/previewImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
               />

            <ProgressBar
                android:id="@+id/imageProgress"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:indeterminate="true"
                android:indeterminateTint="@color/color_primary"
                android:visibility="gone" />

        </FrameLayout>

        <!-- Title -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageContainer"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="Название пакета"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/black"
            android:textStyle="bold"
            tools:text="Базовые эмодзи" />

        <!-- Price or Purchased Badge Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleText"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="vertical">

            <!-- Price -->
            <TextView
                android:id="@+id/priceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:paddingHorizontal="16dp"
                android:paddingVertical="6dp"
                android:text="99 ₽"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/white"
                android:textStyle="bold"
                tools:text="Бесплатно" />

            <!-- Purchased Badge -->
            <TextView
                android:id="@+id/purchasedBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:paddingHorizontal="16dp"
                android:paddingVertical="6dp"
                android:text="Куплено"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Sticker Count (Optional) -->
        <TextView
            android:id="@+id/stickerCountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:text="8 стикеров"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/gray"
            tools:text="8 стикеров" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>