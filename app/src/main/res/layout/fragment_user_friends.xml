<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Content -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/player"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <!-- Header -->
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="Друзья"
            android:elevation="0dp"
            app:elevation="0dp">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:minHeight="?attr/actionBarSize"
                app:title="Сообщество"
                app:navigationIcon="@drawable/arrow_left"
                app:titleTextColor="@color/white"
                android:theme="?attr/actionBarTheme" />

            <LinearLayout
                android:id="@+id/collapsingToolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentScrim="#ffffff"
                app:scrimAnimationDuration="600"
                app:expandedTitleGravity="top|start"
                app:title="Друзья"
                android:elevation="0dp"
                app:elevation="0dp"
                app:expandedTitleTextColor="@android:color/transparent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
                app:statusBarScrim="@android:color/transparent">
                <!-- Content -->
                <androidx.cardview.widget.CardView
                    app:cardBackgroundColor="@android:color/transparent"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="0dp"
                    android:layout_marginTop="0dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"
                    android:id="@+id/header">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_marginTop="12dp">


                        <LinearLayout
                            android:id="@+id/estimate"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:gravity="center_vertical"
                            android:layout_marginRight="16dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="1dp"
                            android:minHeight="72dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="195dp"
                            android:orientation="horizontal"
                            android:paddingLeft="8dp"
                            android:paddingTop="8dp"
                            android:paddingRight="16dp"
                            android:paddingBottom="8dp">

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">


                                <RelativeLayout
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_gravity="end"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <com.google.android.material.imageview.ShapeableImageView
                                        android:id="@+id/avatar"
                                        android:layout_width="55dp"
                                        android:layout_height="55dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/circle_friend" />
                                </RelativeLayout>


                            </FrameLayout>


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    tools:ignore="UseCompoundDrawables">

                                    <TextView
                                        android:id="@+id/textViewName"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:maxLines="1"
                                        android:singleLine="true"
                                        android:textAppearance="?android:textAppearanceMedium"
                                        android:text="Railcinec" />
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/textViewId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="6dp"
                                    android:textAppearance="?android:textAppearanceSmall" />

                            </LinearLayout>

                            <ImageButton
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:background="@drawable/check_circle"
                                android:stateListAnimator="@animator/clicked"
                                android:layout_marginRight="0dp"
                                android:layout_marginLeft="6dp"
                                android:tintMode="multiply" />

                        </LinearLayout>


                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <Button
            android:id="@+id/subscriptionIcon"
            android:alpha="0.7"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="25dp"
            android:paddingBottom="5dp"
            android:gravity="center"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="У вас в друзьях"
            android:layout_marginTop="175dp"
            android:layout_marginLeft="2dp"
            android:textAppearance="?android:textAppearanceSmall" />

        <Button
            android:id="@+id/buttonqrCode"
            android:alpha="0.7"
            android:orientation="horizontal"
            android:textColor="@color/white"
            tools:ignore="UseCompoundDrawables"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/playlistNameText"
            android:layout_marginHorizontal="25dp"
            android:paddingBottom="5dp"
            android:gravity="center"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="QR-Код профиля"
            android:layout_marginTop="225dp"
            android:layout_marginLeft="2dp"
            android:textAppearance="?android:textAppearanceSmall" />


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!-- Bottom player -->
    <LinearLayout
        android:id="@+id/player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/rv7"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#26999999" />
</androidx.constraintlayout.widget.ConstraintLayout>