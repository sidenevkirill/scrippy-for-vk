<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_primary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/color_primary"
        android:orientation="horizontal"
        android:elevation="1dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/arrow_left_black"
            app:tint="#666666" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:padding="0dp">

            <!-- Аватарка с буквой -->
            <TextView
                android:id="@+id/avatar_text"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/circle_background" />

            <!-- Иконка верификации справа внизу -->
            <ImageView
                android:id="@+id/verified_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignBottom="@id/avatar_text"
                android:layout_alignEnd="@id/avatar_text"
                android:layout_marginEnd="-2dp"
                android:layout_marginBottom="-2dp"
                android:visibility="gone"
                android:clickable="true"
                android:focusable="true" />

        </RelativeLayout>

        <TextView
            android:id="@+id/toolbarTitle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:background="@android:color/transparent"
            android:hint="Сиденёв Кирилл"
            android:imeOptions="actionSend"
            android:inputType="textMultiLine|textCapSentences|textAutoCorrect"
            android:maxLines="3"
            android:paddingStart="6dp"
            android:paddingEnd="18dp"
            android:textColor="?android:textColorPrimary"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textCursorDrawable="@null" />

        <ImageButton
            android:id="@+id/btnInfo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="4dp"
            android:visibility="visible"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/menu"
            app:tint="#666666"/>

    </LinearLayout>

    <!-- ProgressBar для отображения загрузки -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:visibility="gone" />

    <!-- SwipeRefreshLayout с RecyclerView для сообщений -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- RecyclerView для сообщений -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewDialog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:scrollbars="vertical" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <LinearLayout
        android:id="@+id/llMsgCompose"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/color_send"
        android:orientation="horizontal"
        android:elevation="4dp">

        <ImageButton
            android:id="@+id/btnAttach"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/emoticon_outline"
            app:tint="#666666" />

        <EditText
            android:id="@+id/editTextMessage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="Сообщение"
            android:imeOptions="actionSend"
            android:inputType="textMultiLine|textCapSentences|textAutoCorrect"
            android:maxLines="3"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textColor="?android:textColorPrimary"
            android:textSize="16sp"
            android:textCursorDrawable="@null" />

        <ImageButton
            android:id="@+id/showEmoji"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/emoticon_outline"
            android:visibility="gone"
            app:tint="#666666" />

        <ImageButton
            android:id="@+id/btnSend"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_send"
            app:tint="#666666"/>

    </LinearLayout>

    <!-- Защита от клавиатуры (для корректного отображения на разных устройствах) -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/transparent" />

</LinearLayout>