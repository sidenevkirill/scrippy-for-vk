<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Scrippy" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimaryDark">@color/color_primary</item>

        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
        <item name="android:navigationBarColor">#F3EDF7</item>
    </style>

    <style name="Theme.Scrippy" parent="Base.Theme.Scrippy" />

    <style name="Base.Theme.Scrippy.Splash" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimaryDark">@color/white</item>

        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
        <item name="android:navigationBarColor">#ffffff</item>
    </style>

    <style name="Base.Theme.Scrippy.Login" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimaryDark">#0044CC</item>

        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
        <item name="android:navigationBarColor">#0077FF</item>
    </style>

    <style name="WhiteTextSpinner" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="WhiteTextSpinner.DropDown" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/dark_background</item>
    </style>

    <style name="ToolbarSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:popupBackground">@android:color/white</item>
        <item name="android:dropDownVerticalOffset">4dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="ToolbarSpinnerItemStyle" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">12dp</item>
    </style>

</resources>